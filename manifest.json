{
  "manifest_version": 2,

  "name": "Scholar bib generator",
  "description": "Collect the bibiliography for your paper.",
  "version": "1.0",
  
  "permissions": [
    "tabs", "http://*/*",
	"storage"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["http://scholar.google.co.il/*","http://scholar.google.com/*"],
      "js": ["jquery-1.10.2.js","jshashtable-3.0.js", "CitationsRespository.js", "CitationsViewer.js","CitationsScript.js"],
	  "css": ["tabs.css"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["CitationsViewer.js","CitationsScript.js","citations.html","CitationsRespository.js"]
}